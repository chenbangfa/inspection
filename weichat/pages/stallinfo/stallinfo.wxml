<nav-bar navbar-data='{{navbarData}}'></nav-bar>
<view style="margin-top:{{height}}px; padding-bottom:150px;width: 100%; float: left;">
<block wx:for="{{stallinfo}}" wx:key="index">
  <view style="width: 96%; margin-left: 2%; border-radius: 6px; border: 1px solid #e9e9e9;background-color: #fff; line-height:26px; margin-top:5px; float: left; padding:5px 0;">
  <image src='https://xj.tajian.cc/servers/{{item.dropPhoto}}' style="width:70px; height:70px; margin: 5px; float: left;  "></image>
  <view style="font-size: 18px; font-weight: bold; margin-left:5px;">{{item.dropName}}</view>
  <view style="font-size: 16px;  margin-left:5px; ">数量：{{item.stallnum}}</view>
  <view style="font-size: 16px;  margin-left:5px; ">地址：{{item.addname}}</view>
</view>
<view style="width: 96%; margin-left: 2%; border-radius: 6px; border: 1px solid #e9e9e9;background-color: #fff; float: left; margin-top:5px;">
  <view style="font-size: 14px;margin-left:5px;border-bottom: 1px solid #e6e6e6;line-height:40px;">开放时间：{{item.starttime}}-{{item.endtime}}</view>
  <view style="font-size: 14px;margin-left:5px;border-bottom: 1px solid #e6e6e6;line-height:40px;">释放周期：{{item.exitzhouqi}} <span wx:if="{{item.exitzhouqi!='每天'}}">{{item.exitdate}}</span> {{item.exittime}}</view>
  <view style="font-size: 14px;margin-left:5px;line-height:40px;">摊位说明：{{item.dropInfo}}</view>
</view>
</block>
<view wx:if="{{timelist.length>0}}" style="width: 96%; margin-left: 2%; border-radius: 6px; border: 1px solid #e9e9e9;background-color: #fff; float: left; margin-top:5px;">
  <view style="font-size: 14px; font-weight: bold; margin-left:5px; margin-top: 10px;">摆摊日历</view>
  <block wx:for="{{timelist}}" wx:key="index">
<view class="viewtime" style="background-color:#fff; color: #333;" bindtap="yuyuetime" data-idx="{{idx}}" data-index="{{index}}" data-cdid="{{articles.id}}" data-state="{{item.state}}" data-time="{{item.times}}" data-money="{{item.money}}">
<view style="border-bottom: 1px solid #d1d1d1; font-size: 14px;">{{item.month}}-{{item.day}}</view>
<view style="font-size: 12px;">摆<span style="font-size: 18px; color: {{item.xjnum>0?'red':'066fb4'}};">{{item.xjnum}}</span>次</view>
</view>
  </block>
</view>
</view>
<view class="commodity_screen" bindtap="hideModalbz" wx:if="{{ycshow}}" catchtouchmove="stopTouch"></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{ycshow}}" style="top:{{height}}px; background-color: #f1f1f1;">
<view style=" padding-bottom: 10px; font-size: 16px; width: 100%; float: left;">
<span style="float: left; margin-left: 10px; font-size: 16px;">登记二维码</span >
<view style=" float: right; margin-right: 10px;" bindtap="closeycshow"><image src="../../image/close.png" style="width: 20px; height:20px;"/></view>
</view>

<view style="text-align: center;background-color: #fff;width: 100%; margin-top:30px;">
  <image src="https://xj.tajian.cc/servers/{{tCode}}"  data-imgurl="https://xj.tajian.cc/servers/{{tCode}}" bindtap="saveImage" style="width: 200px; height: 200px;"/>
  <view bindtap="getcode"><image src="../../image/re.png" style="width:24px; height:24px; margin-top:10px; "></image></view>
  <view style="margin-top: 10px; color: #666;">用户扫码登记</view>

</view>
<view style="width:100%;  text-align: center; padding: 20px 0;background-color: #fff; float: left; border-radius: 12px;">
<button type="primary" bindtap="saveImage"  data-imgurl="https://xj.tajian.cc/servers/{{tCode}}" style="width: 50%;">保存二维码</button>
</view>
</view>

<view wx:if="{{hyIdentity>0}}" style="height:50px; float:left;width: 100%;position: fixed;bottom: 0px; border-top: 1px solid #e6e6e6; padding: 10px 0; z-index: 999; background-color: #fff; bottom: 0; z-index: 111;">

<view class="buttonewm" bindtap="getcode" style="width:30%; margin-right: 5%; background-color:#3ccbda">登记二维码</view>
<navigator url="../stalledit/stalledit?id={{id}}"><view class="buttonewm" style="width:25%; margin-right: 5%; background-color: bisque;">编辑</view></navigator>
<view class="buttonewm" bindtap="delstall" style="width:25%;margin-right: 5%; background-color: #e9e9e9; color: #333;">删除</view>
</view>
