.arrow{
 
  width: 6px;
   
  height: 6px;
   
  border-top: 1px solid #555;
   
  border-right: 1px solid #555;
   
  position: absolute;
   
   
  transform: rotate(45deg);
   
  margin-top:7px;
  margin-left: 3px;
   
  }
  
  .commodity_screen {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #999;
    opacity: 0.9;
    overflow: hidden;
    z-index: 999;
    color: #fff;
  }
  
  .commodity_attr_box {
    width: 96%;
    margin-left: 2%;
    margin-top: 10px;
    position: fixed;
    border-radius: 12px;
    background: #fff;
    padding-top: 20rpx;
    font-size: 14px;
    color: #333;
    z-index: 999;
  }