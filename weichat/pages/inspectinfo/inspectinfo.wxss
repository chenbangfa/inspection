page {
  background-color: #f5f5f5;
  padding-bottom: 50px;
}

.card {
  width: 94%;
  margin-left: 3%;
  background-color: #fff;
  border-radius: 8px;
  margin-top: 15px;
  padding: 15px;
  box-sizing: border-box;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 4px;
}

.company-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-left: 10px;
  flex: 1;
}

.status-badge {
  font-size: 12px;
  padding: 3px 8px;
  border-radius: 4px;
  background-color: #f0f0f0;
  color: #666;
}

.status-0 { color: #ff9800; background-color: #fff3e0; } /* Pending - Warning */
.status-1 { color: #2A82E4; background-color: #e3f2fd; } /* Assigned - Info */
.status-2 { color: #4caf50; background-color: #e8f5e9; } /* Completed - Success */

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
  color: #333;
}

.label {
  color: #888;
  width: 80px;
  flex-shrink: 0;
}

.value {
  flex: 1;
  text-align: right;
  color: #333;
}

.section-title {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  margin-top: 15px;
  margin-bottom: 10px;
  border-left: 4px solid #2A82E4;
  padding-left: 8px;
}

.content-text {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
  align-items: flex-start;
}

/* Updated for 4 items per row */
.photo-wrap, .add-photo {
  width: 23%;
  height: 80px;
  margin-right: 2.66%; 
  margin-bottom: 10px;
  position: relative;
  box-sizing: border-box;
}

.photo-wrap:nth-child(4n), .add-photo:nth-child(4n) {
  margin-right: 0;
}

/* Also support direct images (for read-only view) usually 3 per row is fine there, but let's consistency */
.grid-photo {
  width: 100%;
  height: 100%;
  border-radius: 4px;
  background-color: #eee;
  display: block;
}

/* Specific override for the read-only view if it doesn't use photo-wrap */
/* Actually, the read-only view uses direct .grid-photo class on image.
   We should check if we broke the read-only view. 
   The read-only view WXML: 
   <block wx:for="{{item.hypic}}" ...>
      <image ... class="grid-photo" ...></image>
   </block>
   So .grid-photo needs to be a flex item there.
   Let's add a rule: .photo-grid > .grid-photo (direct child) gets width.
*/

.photo-grid > .grid-photo {
    width: 31%; /* Keep 3 per row for display? Or 4? Let's use 3 as before for display to be safe, or 3 for consistency */
    height: 80px;
    margin-right: 3.5%;
    margin-bottom: 10px;
}

.photo-grid > .grid-photo:nth-child(3n) {
    margin-right: 0;
}

/* Override for usage inside photo-wrap */
.photo-wrap .grid-photo {
    width: 100%;
    height: 100%;
    margin: 0;
}

.add-photo {
  border: 1px dashed #ccc;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.add-photo image {
  width: 40px;
  height: 40px;
}

.delete-btn {
  position: absolute;
  top: -8px;
  right: -8px;
  width: 20px;
  height: 20px;
  background-color: rgba(0,0,0,0.6);
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 18px;
  font-size: 16px;
  z-index: 10;
}

/* Modal Styles */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
}

.commodity_attr_box {
  width: 100%;
  position: fixed;
  z-index: 2000;
  background: #fff;
  overflow: hidden;
}
 