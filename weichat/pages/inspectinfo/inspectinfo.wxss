page {
  background-color: #f5f5f5;
  padding-bottom: 50px;
}

.card {
  width: 94%;
  margin-left: 3%;
  background-color: #fff;
  border-radius: 8px;
  margin-top: 15px;
  padding: 15px;
  box-sizing: border-box;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.card-header {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 10px;
  margin-bottom: 10px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 4px;
}

.company-name {
  font-size: 16px;
  font-weight: bold;
  color: #333;
  margin-left: 10px;
  flex: 1;
}

.status-badge {
  font-size: 12px;
  padding: 3px 8px;
  border-radius: 4px;
  background-color: #f0f0f0;
  color: #666;
}

.status-0 { color: #ff9800; background-color: #fff3e0; } /* Pending - Warning */
.status-1 { color: #2A82E4; background-color: #e3f2fd; } /* Assigned - Info */
.status-2 { color: #4caf50; background-color: #e8f5e9; } /* Completed - Success */

.card-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  font-size: 14px;
  color: #333;
}

.label {
  color: #888;
  width: 80px;
  flex-shrink: 0;
}

.value {
  flex: 1;
  text-align: right;
  color: #333;
}

.section-title {
  font-size: 15px;
  font-weight: bold;
  color: #333;
  margin-top: 15px;
  margin-bottom: 10px;
  border-left: 4px solid #2A82E4;
  padding-left: 8px;
}

.content-text {
  font-size: 14px;
  color: #666;
  line-height: 1.6;
}

.photo-grid {
  display: flex;
  flex-wrap: wrap;
}

.grid-photo {
  width: 31%;
  height: 80px; /* or auto with aspect ratio hack, but fixed height is safer for grids */
  margin-right: 2%;
  margin-bottom: 10px;
  border-radius: 4px;
  background-color: #eee;
}

.grid-photo:nth-child(3n) {
  margin-right: 0;
}

/* Modal Styles */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0,0,0,0.5);
  z-index: 1000;
}

.commodity_attr_box {
  width: 100%;
  position: fixed;
  z-index: 2000;
  background: #fff;
  overflow: hidden;
}
 