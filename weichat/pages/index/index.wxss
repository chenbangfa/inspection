/* 颜色变体 */
.bg-blue { background: linear-gradient(135deg, #2A82E4 0%, #0066CC 100%); }
.bg-cyan { background: linear-gradient(135deg, #00D7C6 0%, #00BFA5 100%); }
.bg-azure { background: linear-gradient(135deg, #32A0FF 0%, #0077EE 100%); }
.bg-purple { background: linear-gradient(135deg, #9C27B0 0%, #7B1FA2 100%); }
.bg-gold { background: linear-gradient(135deg, #C59C6C 0%, #A67C52 100%); }
.bg-orange { background: linear-gradient(135deg, #FF9800 0%, #F57C00 100%); }
.bg-deep-orange { background: linear-gradient(135deg, #FF5722 0%, #E64A19 100%); }
.bg-teal { background: linear-gradient(135deg, #26A69A 0%, #00897B 100%); }
.bg-indigo { background: linear-gradient(135deg, #5C6BC0 0%, #3949AB 100%); }


/* 统计数据网格 */
.data-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.data-box {
  width: 18%;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx 0;
  text-align: center;
  margin-top: 0;
}

.data-num {
  font-size: 36rpx;
  font-weight: bold;
  color: #2A82E4;
  margin-bottom: 8rpx;
}

.data-label {
  font-size: 22rpx;
  color: #888;
}

/* 模板设置列表 */
.template-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.template-item {
  width: 100%;
  margin-bottom: 0;
  padding: 30rpx 0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.template-box {
    width: 48%;
    margin-bottom: 24rpx;
}
