/** index.wxss **/
page {
  background-color: #f6f7f9;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

/* 轮播图 */
.banner-container {
  width: 100%;
  height: 420rpx;
  position: relative;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 通知栏 */
.notice-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 0 30rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

.notice-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}

.notice-swiper {
  flex: 1;
  height: 100%;
}

.notice-item {
  display: flex;
  align-items: center;
  height: 100%;
  font-size: 26rpx;
  color: #666;
}

/* 通用卡片容器 */
.card-container {
  margin: 0 24rpx 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

/* 今日概况卡片 (黄色主题保持不变或微调为更柔和的橙色) */
.overview-card {
  background: linear-gradient(135deg, #FF9900 0%, #FFB700 100%);
  color: #fff;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: '';
  display: inline-block;
  width: 8rpx;
  height: 32rpx;
  background-color: #fff;
  border-radius: 4rpx;
  margin-right: 16rpx;
}

.card-title.dark-text {
  color: #333;
}
.card-title.dark-text::before {
  background-color: #2A82E4;
}

.stats-row {
  display: flex;
  justify-content: space-between;
}

.stat-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.stat-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 10%;
  height: 80%;
  width: 1px;
  background-color: rgba(255, 255, 255, 0.3);
}

.stat-num {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  line-height: 1.2;
}

.stat-label {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 功能网格 */
.function-grid {
  display: flex;
  justify-content: space-between;
  margin-bottom: 0;
}

.grid-item {
  width: 31%;
  height: 180rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.1s;
}

.grid-item:active {
  transform: scale(0.98);
}

.grid-icon {
  width: 64rpx;
  height: 64rpx;
  margin-bottom: 16rpx;
}

.grid-text {
  font-size: 28rpx;
  font-weight: 500;
}

