<view style="margin-top: 10px;float: left; width: 100%; border-radius: 6px;margin-top:{{height+10}}px; background-color: #fff; padding-bottom: 100px;">

<view wx:for="{{glist}}" wx:key="id"  style="float: left; width: 100%; margin-left: 2%;">
   
  <view class="bodiv3" data-showid="{{item.id}}" data-showname="{{item.gName}}" data-showsort="{{item.gSort}}" bindtap="showuser">
  <image src="../../image/zj.png" class="bodivpic"></image>
  <view class="bodivtxt">
  <view style="font-size: 16px;">{{item.gName}}</view>
  <view style="color: #999;font-size: 14px;">排序：{{item.gSort}}，越小越靠前</view>
  </view>
  <span class="bodivinfo">修改</span>
  <span class='arrow' style="margin-top:16px; "></span>
  </view>

</view>


<view class="vnodata" wx:if="{{count==0}}">
<view>没有分类~</view>
</view>


</view>

<view style="height: 50px; float:left;width: 100%;position: fixed;bottom: 0px; border-top: 1px solid #e6e6e6; padding: 10px 0; z-index: 111; background-color: #fff; bottom: 0;">
<view style="float: left;width: 30%; padding:8px 0; margin-left: 10px;">合计：{{count}} 条</view>
  <view style="color: #333; border:1px solid #e6e6e6; padding:8px 0; background-color: #e6e6e6; border-radius:9px; width:40%;float: right; text-align: center;  margin-right: 10px;" bindtap="showadd">新增</view>
</view>


<view class="commodity_screen" wx:if="{{editshow}}"></view>
<view class="commodity_attr_box" wx:if="{{editshow}}" style="top:{{height}}px; background-color: #f1f1f1;">
<view style=" padding-bottom: 10px; font-size: 16px; width: 100%; float: left; line-height:30px;">
<span style="float: left; margin-left:10px; font-size:18px;">修改分类</span >
<image src="../../image/close.png" style="width: 20px; height:20px; float: right; margin-right: 10px; margin-top:7px;" bindtap="hideuser"/>
</view>

<view style="width: 96%; margin-left: 2%;background-color: #fff; border-radius:6px; float: left;">
  
  <view style="float:left;  color:#473436;  width:100%; margin-left: 10px; padding: 10px 0; border-bottom: 1px solid #e9e9e9;">
    <span style="float: left;font-size: 16px;">分类名称</span >
      <input placeholder="请输入分类名称" bindinput="inputWacth" data-input="showname" value="{{showname}}" style="float: left; margin-left:20px;"/>

  </view>
  <view style="float:left;  color:#473436;  width:100%; margin-left: 10px; padding: 10px 0; border-bottom: 1px solid #e9e9e9;">
    <span style="float: left;font-size: 16px;">分类排序</span >
      <input placeholder="请输入分类排序" bindinput="inputWacth" data-input="showsort" value="{{showsort}}" style="float: left; margin-left:20px;"/>

  </view>
</view>

<view style="width:96%; margin-left: 2%; text-align: center; padding-bottom: 20px;background-color: #fff; float: left; padding-top:20px;  border-bottom-left-radius:6px; border-bottom-right-radius: 6px;">
<button type="primary" bindtap="savegroup" style="width:50%; line-height:36px; font-size: 16px;">保存</button>

<button bindtap="delgroup" style="width:50%; line-height:36px; font-size: 16px; border: 0px; background-color: #fff; margin-top:20px; color: #999;">删除</button>
</view>

</view>


<view class="commodity_screen" wx:if="{{addshow}}"></view>
<view class="commodity_attr_box" wx:if="{{addshow}}" style="top:{{height}}px; background-color: #f1f1f1;">
<view style=" padding-bottom: 10px; font-size: 16px; width: 100%; float: left; line-height:30px;">
<span style="float: left; margin-left:10px; font-size:18px;">新增分类</span >
<image src="../../image/close.png" style="width: 20px; height:20px; float: right; margin-right: 10px; margin-top:7px;" bindtap="hideadd"/>
</view>

<view style="width: 96%; margin-left: 2%;background-color: #fff; border-radius:6px; float: left;">
  
  <view style="float:left;  color:#473436;  width:100%; margin-left: 10px; padding: 10px 0; border-bottom: 1px solid #e9e9e9;">
    <span style="float: left;font-size: 16px;">分类名称</span >
      <input placeholder="请输入分类名称" bindinput="inputWacth" data-input="addname" value="{{addname}}" style="float: left; margin-left:20px;"/>

  </view>
  <view style="float:left;  color:#473436;  width:100%; margin-left: 10px; padding: 10px 0; border-bottom: 1px solid #e9e9e9;">
    <span style="float: left;font-size: 16px;">分类排序</span >
      <input placeholder="请输入分类排序" bindinput="inputWacth" data-input="addsort" value="{{addsort}}" style="float: left; margin-left:20px;"/>

  </view>
</view>

<view style="width:96%; margin-left: 2%; text-align: center; padding-bottom: 20px;background-color: #fff; float: left; padding-top:20px;  border-bottom-left-radius:6px; border-bottom-right-radius: 6px;">
<button type="primary" bindtap="addgroup" style="width:50%; line-height:36px; font-size: 16px;">保存</button>

</view>

</view>

