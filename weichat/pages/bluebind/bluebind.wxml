<nav-bar navbar-data='{{navbarData}}'></nav-bar>
<view style="float: left; width: 100%;margin-top:{{height}}px; ">
<view style="padding: 10px 0; width: 100%; float: left; background-color: #fff; text-align: center; color: #333; font-size:18px;">
<view>{{name}}</view><view>{{dropNo}}</view>
</view>
<block wx:for="{{devices}}" wx:for-item="item" wx:key="index">
  <view class="articles" bindtap="bindblue" data-droname="{{item.bName}}" data-state="{{item.bstate}}">  
    <view class="vtit">
      <view class="tit">{{item.bName }}</view>
      <span wx:if="{{item.bstate==0}}" style="float: left; color: #3ccbda;background-color: #e0faf8; padding:1px 5px; border-radius: 6px; margin-left: 10px; margin-top: 5px;">可绑定</span>
      <span wx:else="" style="float: left; color: #666;background-color: #e9e9e9; padding:1px 5px; border-radius: 6px; margin-left: 10px; margin-top: 5px;">已绑定</span>
    </view>    
    <view class="vinfo" style="line-height: 22px;">
      <view class="vlist">{{item.bId}}</view>
    </view>
    <span class="arrow"></span>
  </view>
</block>
<view class="vnodata" wx:if="{{isdata}}">
<view>正在搜索附近蓝牙...</view>
</view>
</view>

