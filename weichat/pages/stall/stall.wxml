<nav-bar navbar-data='{{navbarData}}'></nav-bar>
<view style="float: left; width: 100%;margin-top:{{height}}px;  padding-bottom:80px; ">
<view wx:for="{{odlist}}" wx:for-item="articles" wx:key="id" wx:for-index="id" style="float: left; width: 100%;">
  <view wx:for="{{articles}}" wx:for-item="item" wx:key="id" wx:for-index="index" class="articles">
  <navigator url="{{hyIdentity>0?'../stallinfo/stallinfo?id='+item.id+'':'../stallreg/stallreg?scene='+item.id}}">
    <view class="vpic">
    <image src='https://xj.tajian.cc/servers/{{item.dropPhoto}}' class="pic" mode="aspectFill"></image>
    </view> 
    <view class="vtit">
      <view class="tit">{{item.dropName }}</view>
    </view>    
  </navigator>
    <view class="vinfo" style="line-height: 22px;">
  <navigator url="{{hyIdentity>0?'../stallinfo/stallinfo?id='+item.id+'':'../stallreg/stallreg?scene='+item.id}}">
      <view class="vlist">摊位数量：共{{item.stallnum}}个</view>
      <view class="vlist">开放时间：{{item.starttime}}-{{item.endtime}}</view>
      <view class="vlist">地址：{{item.addname}}</view>
      <view class="vlist" style="margin-top: 5px;">
        <view class="vspan">重置时间：{{item.exitzhouqi}} <span wx:if="{{item.exitzhouqi!='每天'}}">{{item.exitdate}}</span> {{item.exittime}}</view> 
      </view>
      
    </navigator>
    </view>
    <span class="arrow"></span>
  </view>
</view>

<view class="vnodata" wx:if="{{isdata}}">
<view>没有流动摊位~</view>
</view>
</view>

<view class="commodity_screen" bindtap="hideModalbz" wx:if="{{ycshow}}" catchtouchmove="stopTouch"></view>
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{ycshow}}" style="top:{{height}}px; background-color: #f1f1f1;">
<view style=" padding-bottom: 10px; font-size: 16px; width: 100%; float: left;">
<span style="float: left; margin-left: 10px; font-size: 16px;">登记二维码</span >
<view style=" float: right; margin-right: 10px;" bindtap="closeycshow"><image src="../../image/close.png" style="width: 20px; height:20px;"/></view>
</view>

<view style="text-align: center;background-color: #fff;width: 100%; margin-top:30px;">
  <image src="https://xj.tajian.cc/servers/{{tCode}}"  data-imgurl="https://xj.tajian.cc/servers/{{tCode}}" bindtap="saveImage" style="width: 200px; height: 200px;"/>
  <view bindtap="getcode"><image src="../../image/re.png" style="width:24px; height:24px; margin-top:10px; "></image></view>
  <view style="margin-top: 10px; color: #666;">用户扫码查看区域</view>

</view>
<view style="width:100%;  text-align: center; padding: 20px 0;background-color: #fff; float: left; border-radius: 12px;">
<button type="primary" bindtap="saveImage"  data-imgurl="https://xj.tajian.cc/servers/{{tCode}}" style="width: 50%;">保存二维码</button>
</view>
</view>

<view wx:if="{{hyIdentity>0}}" style="height: 50px; float:left;width: 100%;position: fixed;bottom: 0px; border-top: 1px solid #e6e6e6; padding: 10px 0; z-index: 111; background-color: #fff; bottom: 0;">
<view style="float: left;width: 30%; padding:8px 0; margin-left: 10px;">合计：{{count}} 条</view>
<navigator url="../stalladd/stalladd">
  <view style="color: #fff;padding:8px 0; background-color:#3ccbda; border-radius:9px; width:20%;float: right; text-align: center;  margin-right: 10px;">新增</view></navigator>
  <view class="buttonewm" bindtap="getcode" style="width:30%; margin-right: 5%; background-color:#e9e9e9">区域二维码</view>
</view>



