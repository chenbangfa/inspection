@import '../inspectlist/inspectlist.wxss';

/* Ensure page background */
page {
  background-color: #f5f5f5;
  height: 100%;
}

/* Header Bar - Explicitly defined to ensure layout */
.header-bar {
  position: fixed;
  left: 0;
  width: 100%;
  height: 50px;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15px;
  box-sizing: border-box;
  z-index: 100;
  box-shadow: 0 2px 5px rgba(0,0,0,0.05);
}

.team-selector {
  display: flex;
  align-items: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  max-width: 70%;
}

.team-name {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  font-size: 14px;
  color: #666;
  padding: 6px 12px;
  border-radius: 20px;
  background-color: #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn image {
    width: 16px;
    height: 16px;
    margin-right: 4px;
}

/* List Container */
.list-container {
  padding-bottom: 20px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* Item Card Styles */
.item-container {
    padding: 10px 15px 0 15px;
}

.item-card {
    background-color: #fff;
    border-radius: 10px;
    padding: 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    overflow: hidden;
    margin-bottom: 5px;
}

/* Card Header */
.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 15px;
    border-bottom: 1px solid #f9f9f9;
}

.header-left {
    display: flex;
    align-items: center;
}

.serial-num {
    font-size: 14px;
    color: #999;
    margin-right: 10px;
}

.timestamp {
    font-size: 14px;
    color: #333;
    font-weight: 500;
}

/* Status Badges */
.status-badge {
    font-size: 12px;
    padding: 3px 8px;
    border-radius: 4px;
    font-weight: bold;
}

.status-0 { /* Pending */
    background-color: #fff3e0;
    color: #ff9800;
}
.status-1 { /* In Progress */
    background-color: #e3f2fd;
    color: #2A82E4;
}
.status-2 { /* Completed */
    background-color: #e8f5e9;
    color: #4caf50;
}

/* Card Body */
.card-body {
    padding: 15px;
}

.info-row {
    display: flex;
    margin-bottom: 8px;
    font-size: 14px;
    line-height: 1.5;
}

.info-row:last-child {
    margin-bottom: 0;
}

.label {
    color: #888;
    width: 70px;
    flex-shrink: 0;
}

.value {
    color: #333;
    flex: 1;
}

.highlight-row .value {
    color: #2A82E4;
    font-weight: 500;
}

/* Card Footer */
.card-footer {
    padding: 10px 15px;
    background-color: #fafafa;
    border-top: 1px solid #f0f0f0;
    display: flex;
    justify-content: flex-end;
}

.inspector-info {
    font-size: 12px;
    color: #999;
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 100px;
}

.empty-state image {
    width: 120px;
    height: 120px;
    margin-bottom: 20px;
    opacity: 0.5;
}

.empty-state text {
    color: #999;
    font-size: 14px;
}
