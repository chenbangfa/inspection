
.arrow{
 
  width: 6px;
   
  height: 6px;
   
  border-top: 1px solid #999;
   
  border-right: 1px solid #999;
   
  position: absolute;
   
  right: 50rpx;
   
  transform: rotate(45deg);
   
  margin-top:13rpx;
   
  }
.arrowleft{
 
  width:8px;
   
  height:8px;
   
  border-top: 1px solid #000;
   
  border-right: 1px solid #000;
   
  position: absolute;
   
  transform: rotate(45deg);
   
  margin-top:25rpx;
  margin-left:3px;
   
  }
