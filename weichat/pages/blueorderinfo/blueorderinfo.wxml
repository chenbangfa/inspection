<nav-bar navbar-data='{{navbarData}}'></nav-bar>
<view style="margin-top:{{height}}px; padding-bottom:50px;width: 100%; float: left;">

<view style="width: 96%; margin-left:2%;  float: left; padding:5px 0; font-size: 18px; color: #333; font-weight: bold;">
<image src='https://xj.tajian.cc/servers/{{dropPhoto}}' mode="widthFix" style=" float: left; width:15%;"></image>
<view style="float: left; width: 83%; margin-left: 2%; margin-top:5px;">
<view>{{dropName}}<span wx:if="{{odState==1}}" class="bzcspan" style="margin-top: 10px; padding: 5px 15px; font-size: 16px;">异常</span>
<span wx:else="" class="zcspan" style="margin-top: 10px; padding: 5px 15px; font-size: 16px;">正常</span></view>
<view style="font-size: 16px; color: #666; font-weight:normal;">编号：{{dropNo}}</view>

</view>


</view>


<view style="width:96%; margin-left:2%;float: left; background-color: #fff; border-radius:6px; margin-top: 5px;">

<view style="width:96%; margin-left:2%;  border-bottom: 1rpx solid #e9e9e9; padding:10px 0; color: #666;">
<span>巡检时间</span>
<span style="float: right; color: #333;">{{addTime}}</span>
</view>
<view style="width:96%; margin-left:2%; padding:15px 0; color: #666;">
<span>巡检人员</span>
<span style="float: right; color: #333;margin-left: 5px; ">{{odtogether}}</span>
<span style="float: right; color: #333; ">{{hyname}}</span>
</view>
</view>


<view style="width: 96%; margin-left: 2%; border-radius: 6px; border: 1px solid #e9e9e9;background-color: #fff; float: left; margin-top:5px;">
  <view style="font-size: 16px; font-weight: bold; margin-left:5px;line-height:40px;">巡检项目</view>


<view wx:for="{{bluePro}}" wx:key="index" style=" width:100%; padding:10px 0; font-size:16px; border-top:1px solid #e6e6e6; float: left;">
  <view style="float:left;  color:#473436;  width:65%; margin-left: 10px;">{{item.proName}}</view> 
  <view style="float:right;width:30%; ">
 <span wx:if="{{item.proState==1}}" class="bzcspan">异常</span>
 <span wx:else="" class="zcspan">正常</span>
  </view>  
  <view style="float:left;  color:#999;  width:96%; margin-left: 10px; margin-top:5px;">{{item.proInfo}}</view> 
</view>

</view>

<view wx:if="{{odInfo!=''}}"  style="width:96%; margin-left:2%;float: left; background-color: #fff; border-radius:6px; margin-top:5px;">
<view style="margin-left:2%;  border-bottom: 1rpx solid #e9e9e9; padding:10px 0; color: #666;">
<span style="color: #000; font-weight: bold; font-size: 16px;">巡检备注</span>
</view>
<view style="width:96%; margin-left:2%; font-size: 16px;  border-bottom: 1rpx solid #e9e9e9; padding:10px 0; color: #666;">
<span style="color: #333; ">{{odInfo}}</span>
</view>
</view>

<view wx:if="{{imgs!=''}}" style="width:98%; margin-left:1%;float: left; background-color: #fff; border-radius:6px; margin-top: 10px;">
<view style="width:96%; margin-left:2%; padding-top:10px; color: #666;">
<span style="color: #000; font-weight: bold; font-size: 16px;">巡检照片</span>
</view>
<view style="width:96%; margin-left:2%; padding:10px 0; color: #666;">
<block wx:for="{{imgs}}" wx:key="index">
  <image src="https://xj.tajian.cc/servers/{{item}}" data-imgurl="{{item}}" bindtap="showcode" style="width:23%; border-radius: 3px; margin-right: 2%;" mode="widthFix"></image>
</block>
</view>
</view>


<view wx:if="{{issfz==1}}" style="width:98%; margin-left:1%;float: left; background-color: #fff; border-radius:6px; margin-top: 10px;">
<view style="width:96%; margin-left:2%; padding-top:10px; color: #666;">
<span style="color: #000; font-weight: bold; font-size: 16px;">身份证照片</span>
</view>
<view style="width:96%; margin-left:2%; padding:10px 0; color: #666;">
<block>
  <image src="https://xj.tajian.cc/servers/{{sfzzmimg}}" data-imgurl="{{sfzzmimg}}" bindtap="showcode" style="width:23%; border-radius: 3px; margin-right: 2%;" mode="widthFix"></image>  
  <image src="https://xj.tajian.cc/servers/{{sfzfmimg}}" data-imgurl="{{sfzfmimg}}" bindtap="showcode" style="width:23%; border-radius: 3px; margin-right: 2%;" mode="widthFix"></image>
</block>
</view>
</view>

<view wx:if="{{issfz==2}}" style="width:98%; margin-left:1%;float: left; background-color: #fff; border-radius:6px; margin-top: 10px;">
<view style="width:96%; margin-left:2%; padding-top:10px; color: #666;">
<span style="color: #000; font-weight: bold; font-size: 16px;">营业执照照片</span>
</view>
<view style="width:96%; margin-left:2%; padding:10px 0; color: #666;">
<block>
  <image src="https://xj.tajian.cc/servers/{{yyzzimg}}" data-imgurl="{{yyzzimg}}" bindtap="showcode" style="width:23%; border-radius: 3px; margin-right: 2%;" mode="widthFix"></image>  
  </block>
</view>
</view>



</view>

<view class="commodity_attr_box" wx:if="{{showcode}}" style="top:{{height}}px">
<view style="overflow-y: scroll; text-align: center; height:85%;">
  <image src="https://xj.tajian.cc/servers/{{tCode}}" style="width:100%;" mode="widthFix"/>
</view>
<view style="height:15%;width:30%; margin-left:35%;  z-index: 999; background-color: #fff; text-align: center; margin-top: 20px;">
<button type="default" bindtap="hidecode">关闭</button>
</view>
</view>
