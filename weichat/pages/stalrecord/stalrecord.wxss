/* pages/dtlist/dtlist.wxss */
page{background-color: #f9f9f9;}
.arrow{width:8px;height:8px;border-top: 1px solid #999;border-right: 1px solid #999;position: absolute;right: 20rpx;transform: rotate(45deg);margin-top:12px;}
.articles{width: 100%; float: left; background-color: #fff; padding: 5px 0; margin-bottom:5px;}
.vpic{float:left; margin-left: 5px;}
.pic{width: 85px; height:85px; margin-top:5px;}
.vtit{float:left;width:70%; text-align: left; margin-left:8px; font-size: 16px;}
.tit{overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp:1;-webkit-box-orient: vertical;text-overflow:ellipsis;width:75%; float: left; margin-top: 5px; font-weight: bold;}
.vspan{float: left; font-size: 14px;border-radius: 6px;  background-color: #e9e9e9; width: 90%; line-height: 24px;float: left; color: #777; padding:2px 5px;}
.vinfo{float:left;width: 75%;margin-top:2px;}
.vlist{font-size: 14px; text-align: left; margin-left:8px; color: #333; width: 100%; float: left; }
.addpic{width: 14px; height:14px; margin-right: 5px; float: left; margin-top:3px; margin-left: 6px;}
.vnodata{ text-align: center; padding:20px 0; background-color: #fff;color: #999;float: left;width: 100%;margin-top: 5px; font-size: 14px;}

.searchspan{padding:5px 10px; background-color: #e9e9e9; border-radius: 3px;margin-left:2%; float: left;}
.searchview{width: 98%;  float: left; font-size: 14px; color: #333;position: fixed; background-color: #f9f9f9; padding: 10px 0;}
.searchshow{margin-left:1%;margin-top:45px; float: left; width:99%; font-size: 14px; background-color: #fff; line-height: 24px; color: #333; padding-bottom: 5px;}
.sbutton{width:100%;  text-align: center; padding-bottom: 20px;background-color: #fff; float: left; padding-top:20px;  border-bottom-left-radius: 12px; border-bottom-right-radius: 12px;}
.dataspan{width: 22%;float: left;background-color: #f9f9f9; text-align: center; margin-left: 3%;margin-top:10px; padding: 3px 0;}
.closespan{ background-color: #fad4b3; padding:2px 10px; border-radius: 6px; margin-left: 10px; font-size: 12px;}


.arrowdown{ 
  width: 6px;   
  height: 6px;   
  border-top: 2px solid #666;   
  border-right: 2px solid #666;
   float: right;
    margin-top:5px;
    margin-right:15px;
  transform: rotate(135deg);
  }
  
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #999;
  opacity: 0.9;
  overflow: hidden;
  z-index: 999;
  color: #fff;
}

.commodity_attr_box {
  width: 96%;
  margin-left: 2%;
  margin-top: 10px;
  position: fixed;
  border-radius: 12px;
  background: #fff;
  padding-top: 20rpx;
  font-size: 14px;
  color: #333;
  z-index: 999;
}